@{
    ViewBag.Title = "Logowanie";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Neighborly</title>
    <link href="~/css/output.css" rel="stylesheet" />
</head>
<body class="bg-gray-100">
<div class="min-h-screen flex items-center justify-center bg-gray-50 p-4">
    <div class="w-full max-w-md">
        <!-- Logo + tekst powitalny -->
        <div class="text-center mb-8">
            <a class="inline-flex items-center justify-center" href="/">
                <div class="h-12 w-12 text-neighborly-600">
                    <img src="/assets/logo.png" class="h-full w-full object-contain" alt="Neighborly Logo">
                </div>
            </a>
            <h1 class="mt-4 text-2xl font-bold text-gray-900">Zaloguj się do Neighborly</h1>
            <p class="mt-2 text-gray-600">Witaj z powrotem! Zaloguj się, aby kontynuować.</p>
        </div>

        <!-- Karta formularza -->
        <div class="rounded-lg border bg-card text-card-foreground shadow">
            <form method="post" class="space-y-4 px-6 pt-6">
                <!-- Email -->
                <div class="space-y-2">
                    <label for="email" class="text-sm font-medium leading-none">Adres email</label>
                    <input id="email" name="email" type="email" autocomplete="email" required
                           placeholder="twoj@email.com"
                           class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" />
                </div>

                <!-- Hasło -->
                <div class="space-y-2">
                    <div class="flex items-center justify-between">
                        <label for="password" class="text-sm font-medium leading-none">Hasło</label>
                        <a href="/Account/ResetPassword" class="text-sm text-neighborly-600 hover:text-neighborly-700">
                            Zapomniałeś hasła?
                        </a>
                    </div>
                    <input id="password" name="password" type="password" required
                           placeholder="••••••••"
                           class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" />
                </div>

                <!-- Checkbox zapamiętaj -->
                <div class="flex items-center space-x-2">
                    <input id="remember" name="remember" type="checkbox"
                           class="peer h-4 w-4 shrink-0 rounded-sm border border-primary ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" />
                    <label for="remember" class="text-sm">Zapamiętaj mnie</label>
                </div>

                <!-- Przycisk -->
                <button type="submit"
                        class="w-full h-10 bg-neighborly-500 hover:bg-neighborly-600 text-white font-medium rounded-md transition">
                    Zaloguj się
                </button>
            </form>

            <!-- Dolny pasek -->
            <div class="px-6 py-6 text-center text-sm text-muted-foreground">
                Nie masz konta?
                <a href="/Account/Register" class="text-neighborly-600 hover:text-neighborly-700 font-medium">
                    Zarejestruj się
                </a>
            </div>
        </div>
    </div>
</div>
</body>
</html>