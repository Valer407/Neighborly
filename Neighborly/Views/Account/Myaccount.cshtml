@model List<Neighborly.Models.ListingViewModel>
@{
    ViewData["Title"] = "Moje konto";
    var userListings = Model;
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-900">Moje Konto</h1>
        <a asp-controller="Listing" asp-action="Add" class="inline-flex items-center bg-primary text-white hover:bg-primary/90 px-4 py-2 rounded text-sm font-medium">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4" /></svg>
            Dodaj ogłoszenie
        </a>
    </div>

    <div class="w-full">
        <div class="grid grid-cols-3 w-full border-b mb-4 text-sm font-medium text-center">
            <button class="border-b-2 border-primary py-2">Moje ogłoszenia</button>
            <button class="py-2 text-gray-500">Wiadomości</button>
            <button class="py-2 text-gray-500">Ustawienia</button>
        </div>

        <div class="mt-6">
            <div class="bg-white shadow rounded-lg">
                <div class="p-4 border-b">
                    <h2 class="text-lg font-semibold">Moje ogłoszenia (@userListings.Count)</h2>
                </div>
                <div class="p-4 space-y-4">
                    @if (userListings.Any())
                    {
                        foreach (var listing in userListings)
                        {
                            <div class="border rounded-lg p-4 hover:bg-gray-50 flex justify-between items-start">
                                <div class="flex-1">
                                    <div class="flex items-center gap-2 mb-2">
                                        <h3 class="font-semibold text-lg">@listing.Title</h3>
                                        <span class="inline-block text-xs px-2 py-1 rounded @((listing.Type == "offer") ? "bg-primary text-white" : "bg-secondary text-black")">
                                            @(listing.Type == "offer" ? "Oferuję pomoc" : "Szukam pomocy")
                                        </span>
                                    </div>
                                    <p class="text-gray-600 mb-2">@listing.Description</p>
                                    <div class="text-sm text-gray-500">
                                        <span>Dodano: @listing.CreatedAt.ToString("dd.MM.yyyy")</span>
                                        <span class="mx-2">•</span>
                                        <span>@listing.Location.District, @listing.Location.City</span>
                                    </div>
                                </div>
                                <div class="flex items-center gap-2 ml-4">
                                    <a asp-action="Details" asp-controller="Listing" asp-route-id="@listing.Id" class="btn btn-outline btn-sm">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/><path d="M2.458 12C3.732 7.943 7.523 5 12 5s8.268 2.943 9.542 7c-1.274 4.057-5.065 7-9.542 7s-8.268-2.943-9.542-7z"/></svg>
                                    </a>
                                    <a asp-action="Edit" asp-controller="Listing" asp-route-id="@listing.Id" class="btn btn-outline btn-sm">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2"><path d="M15.232 5.232l3.536 3.536m-2.036-1.5a2.25 2.25 0 1 1-3.182-3.182l1.5 1.5zM4 20h4l10.243-10.243-4-4L4 20z"/></svg>
                                    </a>
                                    <form asp-action="Delete" asp-controller="Listing" asp-route-id="@listing.Id" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć to ogłoszenie?')">
                                        <button type="submit" class="btn btn-outline btn-sm text-red-600">
                                            <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18M9 6v12m6-12v12M19 6l-1.5 13.5a1 1 0 0 1-1 .5H7a1 1 0 0 1-1-.5L4 6"/></svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <svg class="h-12 w-12 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 14a4 4 0 1 0 0-8 4 4 0 0 0 0 8z"/><path d="M4 20h16"/></svg>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Nie masz jeszcze żadnych ogłoszeń</h3>
                            <p class="text-gray-500 mb-4">Rozpocznij pomaganie sąsiadom lub poproś o pomoc.</p>
                            <a asp-controller="Listing" asp-action="Add" class="inline-flex items-center bg-primary text-white hover:bg-primary/90 px-4 py-2 rounded text-sm font-medium">
                                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 4v16m8-8H4" /></svg>
                                Dodaj pierwsze ogłoszenie
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
